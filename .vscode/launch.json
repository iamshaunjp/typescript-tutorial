    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "preLaunchTask": "build-ts",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}",
            // マップファイル対象外のコードのステップを省略します
            "smartStep": true,
            "outFiles": [
                "${workspaceFolder}/outDir/**/*.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
        }
    ]
}